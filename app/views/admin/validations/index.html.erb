<p id="notice"><%= notice %></p>

<h1>Listing Validations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @validations.each do |validation| %>
      <tr>
        <% if !validation.validated %>
        <td><%= validation.email  %></td>
        <td><%= validation.validated  %></td>
        <td><%= link_to 'Show', admin_show_user_validation_path(validation.id) %></td>
        <td><%#= link_to 'Edit', edit_admin_validation_path(validation) %></td>
        <td><%#= link_to 'Destroy', [:admin, validation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

